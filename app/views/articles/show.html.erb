<div class="page-header">
  <h1><%= @article.title %></h1>

<form action="/create_favorite" class="form-horizontal">

  <!-- Label and input for user_id -->
  <div class="form-group">

      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

  </div>


  <!-- Label and input for article_id -->
  <div class="form-group">

      <input type="hidden" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @article.id %>">

  </div>


  <div class="form-group">
      <input type="submit" value="Mark As Favorite" class="btn btn-success">
  </div>
</form>

</div>

<dl class="dl-horizontal">

  <dt>Title</dt>
  <dd><%= @article.title %></dd>


  <dt>Article url</dt>
  <dd><%= @article.article_url %></dd>


  <dt>Tag</dt>
  <dd><%= @article.tag %></dd>


  <dt>User</dt>
  <dd><%= @article.user.email %></dd>


  <dt>Description</dt>
  <dd><%= @article.description %></dd>


</dl>
<table class="table table-hover">
<thead>
<tr>

<th>Comment</th>

<th>User</th>

</tr>
</thead>
<tbody>
  <% @article.comments.each do |comment| %>
<tr>
        <td><%= comment.content %></td>
        <td><%= comment.user.email %></b></td>
</tr>
  <% end %>

</tbody>
</table>

<dl><p><b>Favorited By:</b></p></dl>

<ul class="media-list">
  <% @article.fans.each do |fan| %>
    <li class="media">
      <div class="media-body">
        <h4 class="media-heading"></h4>
        <%= fan.email %>
      </div>
    </li>
  <% end %>
</ul>

<div class="page-header">
<h3>Leave Comment</h3>
</div>
<form action="/create_comment" class="form-horizontal">

  <!-- Label and input for content -->
  <div class="form-group">

    <label for="content" class="col-sm-2 control-label">
      Content
    </label>
    <div class="col-sm-10">

      <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"></textarea>

    </div>

  </div>


  <!-- Label and input for article_id -->
  <div class="form-group">
    <div class="col-sm-10">

      <input type="hidden" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @article.id %>">

    </div>

  </div>


  <!-- Label and input for user_id -->
  <div class="form-group">


    <div class="col-sm-10">

      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

    </div>

  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>
