<div class="page-header">
  <h1>Article #<%= @article.id %></h1>

<form action="/create_favorite" class="form-horizontal">

  <!-- Label and input for user_id -->
  <div class="form-group">

      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

  </div>


  <!-- Label and input for article_id -->
  <div class="form-group">

      <input type="hidden" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @article.id %>">

  </div>


  <div class="form-group">
      <input type="submit" value="Mark As Favorite" class="btn btn-success">
  </div>
</form>

</div>

<dl class="dl-horizontal">

  <dt>Title</dt>
  <dd><%= @article.title %></dd>


  <dt>Article url</dt>
  <dd><%= @article.article_url %></dd>


  <dt>Tag</dt>
  <dd><%= @article.tag %></dd>


  <dt>User</dt>
  <dd><%= @article.user_id %></dd>


  <dt>Description</dt>
  <dd><%= @article.description %></dd>


</dl>
