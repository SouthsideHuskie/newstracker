<div class="page-header">
  <h1>Favorites</h1>
</div>



<table class="table table-hover">
  <thead>
    <tr>

      <th>User</th>

      <th>Article</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.favorites.each do |favorite| %>
      <tr>

        <td><%= favorite.user.email %></td>

        <td><%= favorite.article.title %></td>


        <td>
          <a href="/articles/<%= favorite.article_id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

